# LLM Configuration
ANTHROPIC_API_KEY=your-anthropic-api-key-here
OPENAI_API_KEY=your-openai-api-key-here

# Model Selection
DEFAULT_MODEL=anthropic:claude-3-7-sonnet-latest
# Alternatives: openai:gpt-4, openai:gpt-4-turbo

# Graph Storage (NetworkX - pure Python, no external dependencies)
GRAPH_STORAGE_PATH=./data/graph.pkl

# ChromaDB Configuration
CHROMA_PERSIST_DIR=./data/chromadb
CHROMA_COLLECTION_NAME=ssis_packages

# Application Settings
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

# SSIS Package Directory (for analysis)
SSIS_PACKAGES_DIR=./examples/sample_packages

# Agent Configuration
MAX_ITERATIONS=50
AGENT_TIMEOUT=300  # seconds

# Development Settings
DEBUG=False
ENABLE_HUMAN_IN_LOOP=True
